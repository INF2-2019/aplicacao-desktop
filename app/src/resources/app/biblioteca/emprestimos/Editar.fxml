<StackPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.biblioteca.emprestimos.ControllerEdita">
    <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label prefHeight="59.0" prefWidth="391.0" text="Empréstimo">
