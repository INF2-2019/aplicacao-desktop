<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" 
	   maxWidth="-Infinity" 
	   minHeight="-Infinity" 
	   minWidth="-Infinity" 
	   prefHeight="370.0" 
	   prefWidth="800.0" 
           stylesheets="@styles.css"
	   style="-fx-background-color: #FAFAFA;" 
	   xmlns="http://javafx.com/javafx/1" 
	   xmlns:fx="http://javafx.com/fxml/1" 
	   fx:controller="app.diario.disciplinas.AlterarController">
    <children>
	<VBox prefHeight="200.0" prefWidth="100.0">
	    <children>
		<Label prefHeight="59.0" prefWidth="391.0" text="Alterar Disciplina">
		    <font>
			<Font size="36.0" />
		    </font>
		    <VBox.margin>
			<Insets left="12.0" />
		    </VBox.margin>
		</Label>
		<HBox prefHeight="59.0" prefWidth="800.0">
		    <children>
			<Label text="ID-Turma" textFill="#29a58c">
			    <font>
				<Font size="15.0" />
			    </font>
			    <HBox.margin>
				<Insets left="24.0" right="15.0" />
			    </HBox.margin>
			</Label>
			<TextField fx:id="IDTurmas" 
				   maxHeight="-Infinity" 
				   maxWidth="-Infinity" 
				   minHeight="-Infinity" 
				   minWidth="-Infinity" 
				   prefHeight="25.0" 
				   prefWidth="150.0" 
				   promptText="ID da turma"/>
		    </children>
		</HBox>
		<HBox prefHeight="59.0" prefWidth="800.0">
		    <children>
			<Label text="Nome" textFill="#29a58c">
			    <font>
				<Font size="15.0" />
			    </font>
			    <HBox.margin>
				<Insets left="24.0" right="15.0" />
			    </HBox.margin>
			</Label>
			<TextField fx:id="Nome" 
				   maxHeight="-Infinity" 
				   maxWidth="-Infinity" 
				   minHeight="-Infinity" 
				   minWidth="-Infinity" 
				   prefHeight="25.0" 
				   prefWidth="150.0" 
				   promptText="Nome" />
		    </children>
		</HBox>
		<HBox prefHeight="127.0" prefWidth="800.0">
		    <children>
			<Label text="Carga Horária Mínima" textFill="#29a58c">
			    <HBox.margin>
				<Insets left="24.0" right="15.0" />
			    </HBox.margin>
			    <font>
				<Font size="15.0" />
			    </font>
			</Label>
			<TextField fx:id="CargaHoraria" 
				   maxHeight="-Infinity" 
				   maxWidth="-Infinity" 
				   minHeight="-Infinity" 
				   minWidth="-Infinity" 
				   prefHeight="25.0" 
				   prefWidth="150.0" 
				   promptText="Número de horas"
			/>
		    </children>
		</HBox>
		<HBox prefHeight="127.0" prefWidth="800.0">
		    <children>
			<Label text="Confirme o ID da disciplina:" textFill="#29a58c">
			    <HBox.margin>
				<Insets left="24.0" right="15.0" />
			    </HBox.margin>
			    <font>
				<Font size="15.0" />
			    </font>
			</Label>
			<TextField fx:id="ID" 
				   maxHeight="-Infinity" 
				   maxWidth="-Infinity" 
				   minHeight="-Infinity" 
				   minWidth="-Infinity" 
				   prefHeight="25.0" 
				   prefWidth="150.0" 
				   promptText="Confirme o Id"
			/>
		    </children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="52.0" prefWidth="800.0">
		    <children>
			<Button fx:id="Alterar" mnemonicParsing="false" style="-fx-background-color: #29a58c;-fx-cursor: hand;" prefHeight="30.0" prefWidth="200.0" text="Salvar" onAction="#salvar">
			    <font>
				<Font size="20.0" />
			    </font>
			</Button>
			<Button fx:id="Deletar" style="-fx-background-color: #A4A4A4;-fx-cursor: hand;" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Cancelar" onAction="#cancel">
			    <font>
				<Font size="20.0" />
			    </font>
			    <HBox.margin>
				<Insets />
			    </HBox.margin>
			</Button>
		    </children>
		</HBox>
	    </children>
	</VBox>
    </children>
</StackPane>

